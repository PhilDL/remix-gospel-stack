{
  "private": true,
  "name": "remix-app",
  "version": "1.0.0",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "tailwindcss -m -i ./app/styles/app.css -o ./app/styles/tailwind.css",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development pnpm run build:server -- --watch",
    "dev:css": "tailwindcss -w -i ./app/styles/app.css -o ./app/styles/tailwind.css",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config ./build/server.js",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "docker:build": "cd ../.. & docker build -t turborepo-remix-app -f ./apps/remix-app/Dockerfile .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "test:e2e:ci": "npx cypress run",
    "typecheck": "tsc -b && tsc -b cypress"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@my-company/business": "*",
    "@my-company/database": "*",
    "@my-company/internal-nobuild": "*",
    "@my-company/ui": "*",
    "@remix-run/express": "^1.7.0",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@my-company/tailwind-config": "*",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@swc/core": "^1.3.2",
    "@swc/helpers": "^0.4.11",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.18.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.4.6",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.1",
    "@vitest/coverage-c8": "^0.22.1",
    "dotenv": "^16.0.1",
    "esbuild": "^0.15.5",
    "eslint": "^8.20.0",
    "happy-dom": "^6.0.4",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4",
    "start-server-and-test": "^1.14.0",
    "vite": "^3.0.9",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.22.1",
    "cypress": "^10.8.0",
    "eslint-plugin-cypress": "^2.12.1",
    "@faker-js/faker": "^7.5.0"
  },
  "engines": {
    "node": ">=14"
  }
}
