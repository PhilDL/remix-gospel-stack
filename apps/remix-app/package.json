{
  "private": true,
  "name": "@remix-gospel-stack/remix-app",
  "version": "1.0.0",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix vite:build",
    "dev": "pnpm with-env node ./server.mjs",
    "start": "cross-env NODE_ENV=production node ./server.mjs",
    "docker:build": "cd ../.. & docker build -t remix-gospel-stack-remix-app -f ./apps/remix-app/Dockerfile .",
    "lint": "eslint .",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:e2e": "npm run test:e2e:dev --silent",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "pnpm run build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "test:e2e:ci": "pnpm run test:e2e:install && pnpm run test:e2e:run",
    "typecheck": "tsc -b",
    "setup": "pnpm run docker:db && pnpm run db:migrate:dev && turbo run db:migrate:force db:seed build",
    "docker:db": "docker compose -f docker-compose.yml up -d",
    "docker:run:remix-app": "docker run -it --init --rm -p 3000:3000 --env-file .env.docker --env DATABASE_URL='postgresql://postgres:postgres@db:5432/postgres' --network=app_network coraalt-remix-app",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@remix-gospel-stack/business": "workspace:*",
    "@remix-gospel-stack/database": "workspace:*",
    "@remix-gospel-stack/internal-nobuild": "workspace:*",
    "@remix-gospel-stack/ui": "workspace:*",
    "@remix-run/express": "2.15.0",
    "@remix-run/node": "2.15.0",
    "@remix-run/react": "2.15.0",
    "address": "^2.0.3",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.1",
    "close-with-grace": "^2.1.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "execa": "^9.4.0",
    "express": "^4.21.0",
    "get-port": "^7.1.0",
    "morgan": "^1.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.2",
    "@playwright/test": "^1.47.2",
    "@remix-gospel-stack/eslint-config": "workspace:*",
    "@remix-run/dev": "2.15.0",
    "@remix-run/fs-routes": "^2.15.0",
    "@remix-run/route-config": "^2.15.0",
    "@swc/core": "^1.7.28",
    "@swc/helpers": "^0.5.13",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/compression": "^1.7.5",
    "@types/eslint": "^9.6.1",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "8.1.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.0",
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "esbuild": "0.24.0",
    "eslint": "9.15.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "happy-dom": "^15.7.4",
    "msw": "^2.3.1",
    "nodemon": "^3.1.7",
    "npm-run-all2": "^7.0.0",
    "postcss": "^8.4.47",
    "postcss-load-config": "^6.0.1",
    "start-server-and-test": "^2.0.8",
    "tailwindcss": "^3.4.13",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": "20"
  }
}
