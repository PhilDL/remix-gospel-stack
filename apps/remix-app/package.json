{
  "private": true,
  "name": "@remix-gospel-stack/remix-app",
  "version": "1.0.0",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "tsx ./other/build-server.ts",
    "dev": "remix dev -c \"node ./server/dev-server.js\" --manual",
    "start": "cross-env NODE_ENV=production node .",
    "docker:build": "cd ../.. & docker build -t remix-gospel-stack-remix-app -f ./apps/remix-app/Dockerfile .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:e2e": "npm run test:e2e:dev --silent",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "pnpm run build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "test:e2e:ci": "pnpm run test:e2e:install && pnpm run test:e2e:run",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@remix-gospel-stack/business": "workspace:*",
    "@remix-gospel-stack/database": "workspace:*",
    "@remix-gospel-stack/internal-nobuild": "workspace:*",
    "@remix-gospel-stack/ui": "workspace:*",
    "@remix-run/express": "^1.19.0",
    "@remix-run/node": "^1.19.0",
    "@remix-run/react": "^1.19.0",
    "address": "^1.2.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "close-with-grace": "^1.2.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "execa": "^7.1.1",
    "express": "^4.18.2",
    "get-port": "^7.0.0",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@playwright/test": "^1.36.1",
    "@remix-gospel-stack/eslint-config": "workspace:*",
    "@remix-run/dev": "^1.19.0",
    "@remix-run/eslint-config": "^1.19.0",
    "@swc/core": "^1.3.70",
    "@swc/helpers": "^0.5.1",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.44.0",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "8.1.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-c8": "^0.33.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "esbuild": "^0.18.14",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "happy-dom": "^10.0.0",
    "msw": "^1.2.2",
    "nodemon": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.26",
    "postcss-load-config": "^4.0.1",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.6",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": "18"
  }
}
