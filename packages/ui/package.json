{
  "name": "@my-company/ui",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "files": [
    "dist/**"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "tsup src/index.tsx --format esm,cjs --dts --external react --watch & tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@my-company/tsconfig": "*",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.2.2",
    "eslint-config-custom": "*",
    "react": "^17.0.2",
    "tailwind-config": "*",
    "tailwindcss": "^3.1.8",
    "tsup": "^6.1.3",
    "typescript": "^4.5.2"
  }
}
