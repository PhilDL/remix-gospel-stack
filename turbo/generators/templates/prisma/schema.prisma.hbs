datasource db {
{{#ifEquals dbType "turso"}}
  provider = "sqlite"
  url      = env("DATABASE_URL")
{{/ifEquals}}
{{#ifEquals dbType "postgres"}}
  provider = "postgresql"
  url      = env("DATABASE_URL")
{{/ifEquals}}
}

generator client {
  provider   = "prisma-client"
  engineType = "client"
  output     = "../src/generated"
}

model User {
{{#ifEquals dbType "turso"}}
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
{{/ifEquals}}
{{#ifEquals dbType "postgres"}}
  id            Int       @id @default(autoincrement())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
{{/ifEquals}}
}
