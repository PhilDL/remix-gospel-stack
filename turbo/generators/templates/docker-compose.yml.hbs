version: "3"

volumes:
  database:
    driver: local

services:
  db:
    image: postgres:latest
    container_name: "react-router-gospel-stack-postgres"
    restart: always
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_DB=remix_gospel
    ports:
      - "5432:5432"
    volumes:
      - database:/var/lib/postgresql-docker/data
    networks:
      - app_network
  
  # If you want to run the remix app also inside Docker
  # webapp:
  #   environment:
  #     DATABASE_URL: postgresql://postgres:postgres@db:5432/postgres
  #   container_name: webapp
  #   build:
  #     context: .
  #     dockerfile: ./apps/webapp/other/Dockerfile
  #   restart: always
  #   depends_on:
  #     - db
  #   ports:
  #     - 3000:3000
  #   networks:
  #     - app_network

networks:
  app_network:
    external: true
